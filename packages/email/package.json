{
	"name": "@imperium/email",
	"version": "3.0.0",
	"description": "Email Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "lib/email.js",
	"files": [
		"lib",
		"README.md",
		"server.js"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && npm run build:server",
		"build:server": "NODE_ENV=production webpack --config webpack.server.config.js",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"ts": "tsc",
		"DISABLEDtest": "jest",
		"DISABLEDtest:watch": "jest --watch",
		"DISABLEDtest:coverage": "../../tools/coverage.sh email",
		"yalc:publish": "yalc publish --push"
	},
	"dependencies": {
		"@types/nodemailer": "^4.6.8",
		"debug": "^4.0.1",
		"html-to-text": "^5.1.1",
		"lodash": "^4.17.11",
		"markdown-it": "^8.4.2",
		"mjml": "^4.4.0-beta.2",
		"nodemailer": "^6.1.1",
		"striptags": "^3.1.1"
	},
	"peerDependencies": {
		"express": "^4.x"
	},
	"devDependencies": {
		"rimraf": "^2.6.3",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.1"
	},
	"jest": {
		"transform": {
			"^.+\\.[jt]sx?$": "<rootDir>/../../tools/jest-transformer.js"
		}
	}
}
