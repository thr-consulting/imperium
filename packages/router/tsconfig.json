{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declarationDir": "dist"
	},
	"include": [
		"src/index.ts",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	],
	"typedocOptions": {
		"mode": "file",
		"exclude": ["*.test.js", "*.test.ts", "*.test.tsx", "*.test.jsx"],
		"excludeNotExported": true,
		"excludePrivate": true,
		"hideGenerator": true,
		"readme": "README.md",
		"out": "../../website/static/apistatic/router"
	}
}
