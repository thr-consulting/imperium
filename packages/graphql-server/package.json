{
	"name": "@imperium/graphql-server",
	"version": "4.0.0-alpha.17",
	"description": "Imperium Graphql server package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=12"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"types": "./dist/index.d.ts",
	"main": "server.js",
	"files": [
		"server.js",
		"config.js",
		"config.d.ts",
		"dist"
	],
	"scripts": {
		"build": "yarn clean && yarn build:dev && yarn build:prod",
		"build:dev": "NODE_ENV=development webpack --config webpack.js",
		"build:prod": "NODE_ENV=production webpack --config webpack.js",
		"clean": "rimraf ./dist",
		"lint": "eslint --cache --ext js,ts src",
		"lint:fix": "eslint --cache --fix --ext js,ts src",
		"ts": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh",
		"yalc:publish": "yalc publish --push",
		"prepublish": "yarn build && yarn ts"
	},
	"dependencies": {
		"@imperium/server": "^4.0.0-alpha.17",
		"@imperium/util": "^4.0.0-alpha.16",
		"@thx/date": "^10.3.0",
		"@thx/money": "^10.1.1",
		"apollo-server-express": "^2.9.12",
		"cors": "^2.8.5",
		"debug": "^4.1.1",
		"express-jwt": "^5.3.1",
		"graphql": "^14.5.8",
		"graphql-custom-types": "^1.5.1",
		"graphql-scalar-objectid": "^0.1.2",
		"graphql-tag": "^2.10.1",
		"lodash": "^4.17.15",
		"subscriptions-transport-ws": "^0.9.16"
	},
	"jest": {
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/graphql-server",
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.jsx",
			"<rootDir>/src/**/*.ts",
			"<rootDir>/src/**/*.tsx"
		]
	}
}
