  "repository": {
    "type": "git",
    "url": "git@github.com:darkadept/imperium.git"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "yarn start:dev",
