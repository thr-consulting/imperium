{
	"name": "@imperium/graphql",
	"version": "2.0.1",
	"description": "Graphql Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"lib",
		"README.md",
		"client.js",
		"server.js"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && npm run build:server && npm run build:client",
		"build:server": "NODE_ENV=production webpack --config webpack.server.config.js",
		"build:client": "NODE_ENV=production webpack --config webpack.client.config.js",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"ts": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh graphql",
		"yalc:publish": "yalc publish --push"
	},
	"dependencies": {
		"@imperium/core": "^2.0.1",
		"@thx/date": "^10.0.1",
		"@thx/money": "^10.0.1",
		"apollo-cache-inmemory": "^1.5.1",
		"apollo-client": "^2.5.1",
		"apollo-link": "^1.2.11",
		"apollo-link-http": "^1.5.14",
		"apollo-server": "^2.4.8",
		"apollo-server-express": "^2.4.8",
		"debug": "^4.0.1",
		"express-jwt": "^5.3.0",
		"graphql": "^14.2.1",
		"graphql-custom-types": "^1.5.0",
		"graphql-playground-middleware-express": "^1.7.12",
		"graphql-tools": "^4.0.4",
		"lodash": "^4.17.11"
	},
	"peerDependencies": {
		"express": "^4.x"
	},
	"devDependencies": {
		"webpack-cli": "^3.3.0"
	},
	"jest": {
		"transform": {
			"^.+\\.[jt]sx?$": "<rootDir>/../../tools/jest-transformer.js"
		}
	},
	"gitHead": "ef0f65a07cdee2c41888f59f00239a4961884a42"
}
