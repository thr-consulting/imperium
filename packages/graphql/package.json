{
	"name": "@imperium/graphql",
	"version": "0.3.0",
	"description": "Graphql Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"lib",
		"README.md",
		"client.js",
		"server.js"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && concurrently \"npm:build:server\" \"npm:build:client\"",
		"build:watch": "npm run clean && concurrently \"npm:build:server -- --verbose -w\" \"npm:build:client -- --verbose -w\"",
		"build:server": "NODE_ENV=production babel ./src/server -s --out-dir lib/server --config-file ./server.babelrc",
		"build:client": "NODE_ENV=production babel ./src/client -s --out-dir lib/client --config-file ./client.babelrc",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache 'src/**/*.js'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh graphql",
		"docs:md": "../../tools/jsdocmd.sh graphql"
	},
	"dependencies": {
		"@thx/date": "^9.0.0",
		"@thx/money": "^9.0.0",
		"apollo-cache-inmemory": "^1.2.10",
		"apollo-client": "^2.4.2",
		"apollo-link": "^1.2.11",
		"apollo-link-http": "^1.5.14",
		"apollo-server": "^2.1.0",
		"apollo-server-express": "^2.1.0",
		"debug": "^4.0.1",
		"express-jwt": "^5.3.0",
		"graphql": "^14.0.2",
		"graphql-custom-types": "^1.4.0",
		"graphql-playground-middleware-express": "^1.7.3",
		"graphql-tools": "^4.0.0",
		"lodash": "^4.17.11"
	},
	"peerDependencies": {
		"express": "^4.x"
	},
	"jest": {
		"transform": {
			"^.+\\.js$": "<rootDir>/../../tools/jest-transformer.js"
		}
	},
	"gitHead": "ef0f65a07cdee2c41888f59f00239a4961884a42"
}
