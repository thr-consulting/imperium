{
	"name": "@imperium/core",
	"version": "2.0.1",
	"description": "Core Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"lib",
		"bin",
		"scripts",
		"src",
		"webpack",
		"config.js",
		"server.js",
		"types.d.ts"
	],
	"types": "types.d.ts",
	"bin": {
		"imperium": "./bin/imperium.js"
	},
	"scripts": {
		"build": "npm run clean && npm run build:server",
		"build:server": "NODE_ENV=production webpack --config webpack/webpack.serverlib.config.js",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"ts": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh core",
		"docs:md": "../../tools/jsdocmd.sh core",
		"yalc:publish": "yalc publish --push"
	},
	"dependencies": {
		"@thx/router": "^10.1.2",
		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"chalk": "^2.4.1",
		"chokidar": "^2.0.3",
		"compression": "^1.7.4",
		"cors": "^2.8.4",
		"dataloader": "^1.4.0",
		"debug": "^4.0.1",
		"dotenv": "^7.0.0",
		"dotenv-expand": "^5.1.0",
		"es6-promisify": "^6.0.0",
		"express-jwt": "^5.3.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.11",
		"query-string": "^6.4.0",
		"react-dev-utils": "^9.0.0",
		"react-hot-loader": "^4.8.4",
		"socketcluster": "^14.3.0",
		"socketcluster-client": "^14.2.2",
		"whatwg-fetch": "^3.0.0"
	},
	"peerDependencies": {
		"express": "^4.x",
		"react": "^16.x",
		"react-dom": "^16.x",
		"react-router-dom": "^5.x",
		"semantic-ui-react": "^0.x"
	},
	"gitHead": "ef0f65a07cdee2c41888f59f00239a4961884a42",
	"jest": {
		"setupFiles": [
			"<rootDir>/../../tests/setupTests.js"
		],
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transformer.js"
		},
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../../tests/__mocks__/fileMock.js",
			"\\.(css)$": "identity-obj-proxy",
			"routeDefaults": "<rootDir>/../../tests/__mocks__/routeDefaults.js"
		}
	}
}
