{
	"name": "@imperium/auth",
	"version": "1.0.2",
	"description": "Basic Auth Imperium package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"lib",
		"README.md",
		"client.js",
		"server.js",
		"index.js"
	],
	"scripts": {
		"prepublish": "npm run build",
		"build": "npm run clean && concurrently \"npm:build:server\" \"npm:build:client\"",
		"build:watch": "npm run clean && concurrently \"npm:build:server -- --verbose -w\" \"npm:build:client -- --verbose -w\"",
		"build:server": "NODE_ENV=production babel ./src/server -s --out-dir lib/server --config-file ./server.babelrc",
		"build:client": "NODE_ENV=production webpack",
		"clean": "rimraf ./lib/*",
		"lint": "eslint --cache 'src/**/*.js'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh auth",
		"docs": "NODE_ENV=development jsdoc -c ../../tools/jsdoc.json",
		"docs:md": "../../tools/jsdocmd.sh auth"
	},
	"dependencies": {
		"@thx/controls": "^10.0.1",
		"@thx/mongoloader": "^10.0.1",
		"@thx/tschemas": "^10.0.1",
		"bcrypt": "^3.0.5",
		"debug": "^4.0.1",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.11",
		"react-apollo": "2.3.3",
		"yup": "^0.27.0"
	},
	"peerDependencies": {
		"mongodb": "^3.x",
		"react": "^16.x",
		"react-router-dom": "^4.x",
		"semantic-ui-react": "^0.x"
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/../../tests/setupTests.js"
		],
		"transform": {
			"^.+\\.js$": "<rootDir>/../../tools/jest-transformer.js"
		},
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../../tests/__mocks__/fileMock.js",
			"\\.(css)$": "identity-obj-proxy"
		}
	},
	"gitHead": "ef0f65a07cdee2c41888f59f00239a4961884a42"
}
