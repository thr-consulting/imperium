{
	"name": "@imperium/util",
	"version": "4.3.0",
	"description": "Imperium Util package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=12"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"types": "dist/index.d.ts",
	"main": "index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "yarn build:dev && yarn build:prod",
		"build:dev": "NODE_ENV=development webpack --config webpack.js",
		"build:prod": "NODE_ENV=production webpack --config webpack.js",
		"clean": "rimraf ./dist && rimraf .eslintcache",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"lint:fix": "eslint --cache --fix --ext js,ts,tsx src",
		"ts": "tsc",
		"Xtest": "jest",
		"Xtest:watch": "jest --watch",
		"Xtest:coverage": "../../tools/coverage.sh",
		"yalc:publish": "yalc publish --push",
		"typedoc": "typedoc"
	},
	"devDependencies": {
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"debug": "^4.1.1",
		"inspect-loader": "^1.0.0",
		"webpack-node-externals": "^2.5.0"
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "../../tsconfig.json"
		}
	},
	"jest": {
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/util",
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.jsx",
			"<rootDir>/src/**/*.ts",
			"<rootDir>/src/**/*.tsx"
		]
	}
}
