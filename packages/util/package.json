{
	"name": "@imperium/util",
	"version": "4.0.6",
	"description": "Imperium Util package",
	"repository": "darkadept/imperium",
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=12"
	},
	"bugs": {
		"url": "https://github.com/darkadept/imperium/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"types": "dist/index.d.ts",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "NODE_ENV=production webpack --config webpack.js",
		"clean": "rimraf ./dist",
		"lint": "eslint --cache --ext js,ts,tsx src",
		"lint:fix": "eslint --cache --fix --ext js,ts,tsx src",
		"ts": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh",
		"yalc:publish": "yalc publish --push",
		"prepublish": "yarn build && yarn ts",
		"typedoc": "typedoc"
	},
	"devDependencies": {
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"debug": "^4.1.1",
		"inspect-loader": "^1.0.0",
		"webpack-node-externals": "^1.7.2"
	},
	"jest": {
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/util",
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.jsx",
			"<rootDir>/src/**/*.ts",
			"<rootDir>/src/**/*.tsx"
		]
	}
}
