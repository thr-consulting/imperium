{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": false,
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"pretty": true,
		"declaration": true,
		"noImplicitAny": true,
		"importsNotUsedAsValues": "error",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"plugins": [
			{
				"transform": "@zerollup/ts-transform-paths"
			}
		],
		"emitDeclarationOnly": false,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~common/*": ["./src/common/*"]
		}
	},
	"include": ["src/index.tsx", "types/*.d.ts"],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.test.js",
		"src/**/*.test.tsx",
		"src/**/*.test.jsx"
	]
}
