	"author": "Mike Kornelson <darkadept@durbn.net>",
	"workspaces": [
		"packages/*",
		"packages/examples/*"
	],
	"scripts": {
		"build": "lerna run build",
		"clean": "lerna run clean && lerna clean && rimraf ./node_modules",
		"lerna": "lerna",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint:fix",
		"organize": "organize -p packages -d imperium",
		"test": "lerna run test",
		"depcheck": "lerna run depcheck",
		"coverage": "coverage -p packages -c docs/assets/coverage",
		"ts": "yarn ts:phase-core && yarn ts:phase-server && yarn ts:phase-client && yarn ts:phase-example",
		"ts:phase-client": "lerna run ts --scope '@imperium/{auth-client,auth-graphql-client,graphql-client,router,state,layout}'",
		"ts:phase-core": "lerna run ts --scope '@imperium/{connector,client,server}'",
		"ts:phase-example": "lerna run ts --scope '@imperium/{example-domain,example-server,example-standalone,example-web}'",
		"ts:phase-server": "lerna run ts --scope '@imperium/{authorization,auth-server,domaindriven,graphql-server,voyager}'",
		"typedoc": "lerna run typedoc",
		"prepare": "husky install"
	},
