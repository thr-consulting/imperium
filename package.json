{
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/darkadept/imperium.git"
	},
	"private": true,
	"workspaces": [
		"packages/*",
		"packages/examples/*"
	],
	"scripts": {
		"lerna": "lerna",
		"build:phase1": "lerna run build --scope '@imperium/util'",
		"build:phase2": "lerna run build",
		"build": "yarn build:phase1 && yarn build:phase2",
		"clean": "lerna run clean && lerna clean && rimraf ./node_modules",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint:fix",
		"ts:phase-build": "lerna run ts --scope '@imperium/{util,babel-preset-imperium,eslint-config-imperium,prettier-config-imperium}'",
		"ts:phase-core": "lerna run ts --scope '@imperium/{dev,client,server,context-manager}'",
		"ts:phase-server": "lerna run ts --scope '@imperium/{auth-server,graphql-server}'",
		"ts:phase-client": "lerna run ts --scope '@imperium/{auth-client,auth-graphql-client,graphql-client,router}'",
		"ts:phase-example": "lerna run ts --scope '@imperium/{example-domain-advanced,example-domain-simple,example-server,example-standalone,example-web}'",
		"ts": "yarn ts:phase-build && yarn ts:phase-core && yarn ts:phase-server && yarn ts:phase-client && yarn ts:phase-example",
		"test": "lerna run test",
		"test:coverage": "lerna run test:coverage",
		"yalc:publish": "lerna run yalc:publish",
		"typedoc": "lerna run typedoc"
	},
	"devDependencies": {
		"@apollo/react-hooks": "^3.1.5",
		"@babel/core": "^7.9.0",
		"@types/bcrypt": "^3.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/debug": "^4.1.5",
		"@types/express": "^4.17.6",
		"@types/express-jwt": "^0.0.42",
		"@types/faker": "^4.1.11",
		"@types/jest": "^25.2.1",
		"@types/js-cookie": "^2.2.6",
		"@types/js-money": "^0.6.0",
		"@types/jsonwebtoken": "^8.3.9",
		"@types/jwt-decode": "^2.2.1",
		"@types/lodash": "^4.14.150",
		"@types/mongoose": "^5.7.12",
		"@types/node-fetch": "^2.5.7",
		"@types/pdfmake": "^0.1.13",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@types/react-router-dom": "^5.1.4",
		"@types/redis": "^2.8.18",
		"@types/webpack-node-externals": "^1.7.1",
		"@types/yup": "^0.28.0",
		"apollo-client": "^2.6.8",
		"apollo-utilities": "^1.3.3",
		"babel-jest": "^25.4.0",
		"coverbadge": "^0.5.5",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"enzyme-to-json": "^3.4.4",
		"eslint": "^6.8.0",
		"graphql": "^14.6.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^25.4.0",
		"lerna": "^3.20.2",
		"merge-options": "^2.0.0",
		"mongoose": "^5.9.10",
		"prettier": "^2.0.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.1.2",
		"rimraf": "^3.0.2",
		"typedoc": "^0.17.6",
		"typeorm": "^0.2.24",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0"
	}
}
