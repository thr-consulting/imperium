{
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/darkadept/imperium.git"
	},
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"workspaces": [
		"packages/*",
		"packages/examples/*"
	],
	"scripts": {
		"build": "lerna run build",
		"clean": "lerna run clean && lerna clean && rimraf ./node_modules",
		"lerna": "lerna",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint:fix",
		"sort": "npx sort-package-json && lerna run sort",
		"test": "lerna run test",
		"test:coverage": "lerna run test:coverage",
		"ts": "yarn ts:phase-core && yarn ts:phase-server && yarn ts:phase-client && yarn ts:phase-example",
		"ts:phase-client": "lerna run ts --scope '@imperium/{auth-client,auth-graphql-client,graphql-client,router}'",
		"ts:phase-core": "lerna run ts --scope '@imperium/{connector,client,server,util}'",
		"ts:phase-example": "lerna run ts --scope '@imperium/{example-domain,example-server,example-standalone,example-web}'",
		"ts:phase-server": "lerna run ts --scope '@imperium/{auth-server,graphql-server}'",
		"typedoc": "lerna run typedoc"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
