{
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/darkadept/imperium.git"
	},
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"workspaces": [
		"packages/*",
		"packages/examples/*"
	],
	"scripts": {
		"build": "lerna run build",
		"clean": "thx clean",
		"codegen": "thx codegen -p packages/examples -d imperium",
		"coverage": "coverage -p packages -c docs/assets/coverage",
		"deps": "thx deps",
		"lerna": "lerna",
		"lint": "thx lint",
		"lint:fix": "thx lint:fix",
		"organize": "thx organize -p packages -d imperium",
		"prepare": "husky install",
		"sort": "thx sort",
		"test": "thx test",
		"ts": "yarn ts:phase-core && yarn ts:phase-server && yarn ts:phase-client && yarn ts:phase-example",
		"ts:phase-client": "lerna run ts --scope '@imperium/{auth-client,auth-graphql-client,graphql-client,router,state,layout}'",
		"ts:phase-core": "lerna run ts --scope '@imperium/{connector,client,server}'",
		"ts:phase-example": "lerna run ts --scope '@imperium/{example-domain,example-server,example-standalone,example-web}'",
		"ts:phase-server": "lerna run ts --scope '@imperium/{authorization,auth-server,domaindriven,graphql-server,voyager}'",
		"typedoc": "lerna run typedoc"
	},
	"devDependencies": {
		"@apollo/client": "^3.4.15",
		"@babel/core": "^7.14.0",
		"@commitlint/cli": "^13.2.0",
		"@commitlint/config-conventional": "^13.2.0",
		"@mikro-orm/core": "^4.0.2",
		"@mikro-orm/postgresql": "^4.5.9",
		"@reduxjs/toolkit": "^1.6.1",
		"@thx/common-webpack": "^14.0.0",
		"@thx/sharedcache": "^14.2.0",
		"@thx/tools": "^14.2.2",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/debug": "^4.1.5",
		"@types/express-jwt": "^6.0.1",
		"@types/jest": "^27.0.2",
		"@types/js-money": "^0.6.0",
		"@types/loadable__component": "^5.13.0",
		"@types/node": "^14.17.20",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.5",
		"@types/react-responsive": "^8.0.2",
		"@types/react-router-dom": "^5.1.4",
		"@types/react-table": "^7.0.28",
		"@types/redis": "^2.8.18",
		"@types/uuid": "^8.0.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"apollo-server-express": "2.19.2",
		"babel-loader": "^8.2.2",
		"eslint": "^7.6.0",
		"express": "^4.17.1",
		"graphql": "^15.6.0",
		"husky": "^7.0.2",
		"jest": "^27.2.4",
		"lerna": "^4.0.0",
		"mingo": "^4.2.0",
		"prettier": "^2.0.5",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-redux": "^7.2.4",
		"react-router-dom": "^5.1.2",
		"redis": "^3.1.2",
		"ts-node": "^10.2.1",
		"ttypescript": "^1.5.12",
		"typescript": "^4.2.4",
		"webpack": "^5.58.0",
		"webpack-cli": "^4.9.0",
		"winston": "^3.3.3"
	}
}
