	"repository": {
		"type": "git",
		"url": "https://github.com/darkadept/imperium.git"
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lerna": "lerna",
		"build": "yarn build:auth && yarn build:graphql && yarn build:core && yarn build:context",
		"build:auth": "cd packages/auth && yarn build",
		"build:graphql": "cd packages/graphql && yarn build",
		"build:core": "cd packages/core && yarn build",
		"build:context": "cd packages/context && yarn build",
		"lint": "lerna run lint",
		"ts": "lerna run ts",
		"test": "lerna run test --stream --concurrency 1",
		"test:coverage": "lerna run test:coverage --stream --concurrency 1",
		"pkghash": "./tools/pkghash",
		"docs:md": "lerna run docs:md",
		"docs:build": "yarn docs:md && cd website && yarn build",
		"ready:commit": "yarn lint && yarn test:coverage && yarn docs:build",
		"yalc:publish": "lerna run yalc:publish"
	},
	"devDependencies": {
		"@babel/core": "^7.4.0",
		"babel-jest": "^24.5.0",
		"babel-loader": "^8.0.4",
		"coverbadge": "^0.5.5",
		"css-loader": "^2.1.1",
		"dmd-clear": "^0.1.2",
		"enzyme": "^3.7.0",
		"enzyme-adapter-react-16": "^1.11.2",
		"enzyme-to-json": "^3.3.4",
		"eslint": "^5.15.3",
		"express": "^4.16.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^24.5.0",
		"jsdoc-babel": "^0.5.0",
		"jsdoc-to-markdown": "^4.0.1",
		"lerna": "^3.13.4",
		"mongodb": "^3.1.6",
		"mongodb-memory-server": "^5.1.1",
		"mongoose": "^5.5.7",
		"react": "^16.8.4",
		"react-dom": "npm:@hot-loader/react-dom",
		"react-router-dom": "^5.0.0",
		"rimraf": "^2.6.2",
		"semantic-ui-react": "^0.87.1",
		"style-loader": "^0.23.0",
		"typescript": "^3.4.5",
		"webpack": "^4.30.0",
		"webpack-node-externals": "^1.7.2"
	}
}
